<%- include('standard/header.ejs') %>
<div class="blog-contain">
<form action="/patch" method="post" class="blog-form">
    <input type="hidden" id="blogid" name="blogid" value="<%= data.blogid %>">
    <div>
    <label for="title">Title:</label>
    <input type="text" id="title" name="title" class="blog-input" value="<%= data.title %>">
    </div>
    <div>
    <label for="date">Date:</label>
    <input type="text" id="text" name="date" class="blog-input" value="<%= data.blogdate %>">
    </div>
    <div>
    <label for="blog">Blog:</label>
    <textarea id="blog" name="blog" rows="22" cols="150" resize="none" class="blog-textarea"><%= data.blog %></textarea>
    </div>
    <div>   
    <input type="submit" value="Update" name="Update" class="blog-submit">
    </div>
</form>
</div>
  <%- include('standard/footer.ejs') %>