<%- include('standard/header1.ejs') %>

<div class="container">
    <div class="login-container">
      <form class="login-form" action="/login" method="POST">
        <h2>Login</h2>
        <div class="input-group">
          <label for="username">Username</label>
          <input type="text" id="username" placeholder="Your username" name="username" required>
        </div>
        <div class="input-group">
          <label for="password">Password</label>
          <input type="password" id="password" placeholder="Enter valid password" name="password" required>
        </div>
        <button type="submit">Login</button>
      </form>
    </div>
    <div class="signup-link">
      <ul class="nav-links">
        <li><a href="/signup">Signup</a></li>
      </ul>
    </div>
  </div>

  <%- include('standard/footer.ejs') %>

